<Window x:Class="Page_Navigation_App.View.AddCategoryForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddCategory" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#212529">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="ID:" Grid.Row="0" Foreground="White"/>
        <TextBox x:Name="idTextBox" Grid.Row="0" Width="200" Margin="5"/>

        <Label Content="Name:" Grid.Row="2" Foreground="White" />
        <TextBox x:Name="nameTextBox" Grid.Row="2" Width="200" Margin="5"/>

        <Label Content="DepartmentID:" Grid.Row="6" Foreground="White"/>
        <TextBox x:Name="departmentTextBox" Grid.Row="6" Width="200" Margin="5"/>

        <Button Content="Add" Grid.Row="8" Width="80" HorizontalAlignment="Center" Click="AddButton_Click" Margin="0,49,0,-69"/>
        <Button Content="Cancel" Grid.Row="8" Width="80" HorizontalAlignment="Left" Margin="255,49,0,-69" Click="CancelButton_Click"/>
    </Grid>
</Window>
